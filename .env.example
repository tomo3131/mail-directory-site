# メールディレクトリサイト - 環境変数テンプレート

# ========================================
# データベース設定
# ========================================
DATABASE_URL=postgresql://username:password@localhost:5432/mail_directory_production
DATABASE_URL_DEV=postgresql://username:password@localhost:5432/mail_directory_development
DATABASE_URL_TEST=postgresql://username:password@localhost:5432/mail_directory_test

# ========================================
# Redis設定
# ========================================
REDIS_URL=redis://localhost:6379/0

# ========================================
# Elasticsearch設定
# ========================================
ELASTICSEARCH_URL=http://localhost:9200

# ========================================
# AWS設定
# ========================================
AWS_REGION=ap-northeast-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# AWS SES（メール受信）
SES_EMAIL_DOMAIN=mailarchive.jp
SES_RECEIPT_RULE_SET_NAME=mail-directory-ruleset

# AWS S3（画像保存）
S3_BUCKET_NAME=mail-directory-images
S3_REGION=ap-northeast-1

# AWS CloudFront（CDN）
CLOUDFRONT_DOMAIN=d1234567890.cloudfront.net

# ========================================
# Stripe設定（決済）
# ========================================
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxx
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxx

# Stripeプラン ID
STRIPE_PLAN_PRO_MONTHLY=price_xxxxxxxxxxxxx
STRIPE_PLAN_PRO_YEARLY=price_xxxxxxxxxxxxx
STRIPE_PLAN_TEAM_MONTHLY=price_xxxxxxxxxxxxx
STRIPE_PLAN_TEAM_YEARLY=price_xxxxxxxxxxxxx

# ========================================
# JWT設定（認証）
# ========================================
JWT_SECRET_KEY=your_jwt_secret_key_here_min_32_characters
JWT_EXPIRATION_TIME=900 # 15分（秒単位）
REFRESH_TOKEN_EXPIRATION_TIME=604800 # 7日間（秒単位）

# ========================================
# Next.js設定
# ========================================
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# ========================================
# Rails設定
# ========================================
RAILS_ENV=development
RAILS_MAX_THREADS=5
PORT=3001
SECRET_KEY_BASE=your_secret_key_base_here

# ========================================
# その他のサービス
# ========================================
# Slack通知（キーワードアラート用）
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/xxx/xxx

# Google Analytics
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry（エラートラッキング）
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# ========================================
# 開発環境用設定
# ========================================
# メール送信テスト用
MAIL_FROM=noreply@mailarchive.jp

# デバッグモード
DEBUG=false

# ========================================
# 本番環境用設定
# ========================================
# ドメイン
PRODUCTION_DOMAIN=mailarchive.jp

# SSL/TLS
SSL_CERT_PATH=/etc/letsencrypt/live/mailarchive.jp/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/mailarchive.jp/privkey.pem
